<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/smallMargin"
    android:orientation="horizontal"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/setListItemCardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dimenTiny"
      android:layout_marginLeft="@dimen/defaultMargin"
      android:layout_marginRight="@dimen/defaultMargin"
      android:layout_marginTop="@dimen/dimenTiny"
      android:background="@android:color/white"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/smallMargin"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/setListItemTvCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black95"
            />

        <TextView
            android:id="@+id/setListItemTvInfoCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black95"
            />

      </LinearLayout>

      <TextView
          android:id="@+id/setListItemTvName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-light"
          android:textColor="@color/black95"
          />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
        <TextView
            android:id="@+id/setListItemTvType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black95"
            />

        <TextView
            android:id="@+id/setListItemTvBorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black95"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/setListItemTvReleaseDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black95"
            android:textSize="@dimen/smallText"
            />

        <TextView

            android:id="@+id/setListItemTvBooster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="0.3"
            android:drawableLeft="@drawable/ic_star_border_pink_18dp"
            android:drawablePadding="@dimen/dimenTiny"
            android:fontFamily="sans-serif-light"
            android:text="@string/boosterPack"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/smallText"
            />

      </LinearLayout>


    </LinearLayout>
  </android.support.v7.widget.CardView>


</FrameLayout>