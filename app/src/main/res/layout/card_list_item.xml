<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/smallMargin"
    >

  <android.support.v7.widget.CardView
      android:id="@+id/cardListItemCardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/dimenTiny"
      android:layout_marginLeft="@dimen/defaultMargin"
      android:layout_marginRight="@dimen/defaultMargin"
      android:layout_marginTop="@dimen/dimenTiny"
      android:background="@android:color/white"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/smallMargin"
        >

      <ImageView
          android:id="@+id/cardListItemImageView"
          android:layout_width="@dimen/cardThumbnailWidth"
          android:layout_height="@dimen/cardThumbnailHeight"
          android:layout_marginRight="@dimen/smallMargin"
          android:scaleType="fitStart"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <TextView
            android:id="@+id/cardListItemTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black_95"
            />

        <TextView
            android:id="@+id/cardListItemTvColors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black_95"
            />

      </LinearLayout>

    </LinearLayout>

  </android.support.v7.widget.CardView>

</FrameLayout>